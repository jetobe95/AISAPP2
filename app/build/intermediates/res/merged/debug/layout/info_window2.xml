<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@layout/bordermayor"
    android:paddingBottom="2dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="2dp">


    <LinearLayout
        android:id="@+id/filanombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/border2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Nombre ="
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="------"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filatipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filanombre"
        android:background="@layout/borderarribano"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="3dp"
            android:paddingTop="1dp"
            android:text=" Tipo ="
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tipo"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="3dp"
            android:paddingTop="1dp"
            android:text="-------"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filaestado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filatipo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Estado ="
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_estado"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="------"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filainfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filaestado"
        android:background="@layout/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/borderderechano"
            android:text=" Velocidad"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/border"
            android:text=" Curso"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/borderizquierdano"
            android:text=" Calado"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filainfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filainfo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_velocidad"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/borderderechano"
            android:paddingLeft="2dp"
            android:text=" -----"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_rumbo"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/border"
            android:paddingLeft="2dp"
            android:text="------"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_calado"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@layout/borderizquierdano"
            android:paddingLeft="2dp"
            android:text="------"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filalatitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filainfo2"
        android:background="@layout/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Latitud ="
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_latitud"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="------"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filalongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filalatitud"
        android:background="@layout/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Longitud ="
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_longitud"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="------"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filammsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filalongitud"
        android:background="@layout/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" MMSI ="
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mmsi"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="------"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/filatime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filammsi"
        android:layout_weight="1"
        android:background="@layout/border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Recibido = "
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="------"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>
